    = csrf_meta_tags
  %body
    %header#header
      %nav.navbar.navbar-default.navbar-client.center-align{role: :navigation}
        .container.center-align
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to 'Home', root_path
            %li
