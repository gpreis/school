= simple_form_for [course] do |f|
  .panel.panel-default
    .panel-heading
      %h3.panel-title Informações do Curso
    .panel-body
      .row
        .col-md-4.form-group
          = f.input :name, input_html: {class: "form-control"}
        .col-md-8.form-group
          = f.input :description, input_html: {class: "form-control"}
  %a.btn.btn-default{href: courses_path} Voltar
  = f.submit 'Salvar', class: "btn btn-success pull-right"