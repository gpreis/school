= simple_form_for [student] do |f|
  .panel.panel-default
    .panel-heading
      %h3.panel-title Informações do Estudante
    .panel-body
      .row
        .col-md-8.form-group
          = f.input :name, input_html: {class: "form-control"}
        .col-md-4.form-group
          = f.input :register_number, input_html: {class: "form-control"}
  = back_button(Student)
  = f.submit 'Salvar', class: "btn btn-success pull-right"