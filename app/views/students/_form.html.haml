= simple_form_for [student] do |f|
  .panel.panel-default
    .panel-heading
      %h3.panel-title Informações do Estudante
    .panel-body
      .row
        .col-md-8
          = f.input :name, input_html: {class: "form-control"}
        .col-md-4
          = f.input :register_number, input_html: {class: "form-control"}
  %a.btn.btn-default{href: students_path} Voltar
  = f.submit 'Salvar', class: "btn btn-success pull-right"